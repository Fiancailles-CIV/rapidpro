-extends 'smartmin/form.html'
-load smartmin sms i18n

-block fields
  .title
    -trans "Message Details"
  %fieldset
    -render_field 'omnibox'
    -render_field 'compose'

-block summary
  -include "includes/recipients.haml" with groups=broadcast.groups.all contacts=broadcast.contacts.all

  -with translation=broadcast.get_translation

    .mt-2
      {{ translation.text }}
    .value-attachments{ style:"margin-top: 5px" }
      -for attachment in translation.attachments
        {% attachment_button attachment %}
